<h2 style= "text-align:center;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :first_name, placeholder: "First Name",autofocus: true, class: "log_in_input", autocomplete: "first name" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true,class: "log_in_input",  autocomplete: "first name" %>
  </div>


  <div class="field">
    <%= f.email_field :email,placeholder: "email", autofocus: true, class: "log_in_input", autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "#{}new password", class: "log_in_input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: "confirm",class: "log_in_input",  autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "myButton"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
