<h1><%= @trip.id ? "Edit Trip" : "Create Trip" %></h1>
<hr />
<%= form_with(model: @trip, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name,required: true, autofocus: true, class: "input" %>
  </div>
 <div class="field">
   <%= f.label :start_date %>
   <%= f.text_field :start_date, class: "input" %>
 </div>
 <div class="field">
   <%= f.label :end_date %>
   <%= f.text_field :end_date, class: "input" %>
 </div>
 <%= f.submit nil, class: "ui blue button" %>
<% end %>
