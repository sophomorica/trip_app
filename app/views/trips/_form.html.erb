<h1><%= @trip.id ? "Edit Trip" : "Create Trip" %></h1>
<hr />
<%= form_for @trip do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
  <br />
  <%= f.label :end_date %>
  <%= f.text_field :end_date %>
  <%= f.submit %>
<% end %>